<p class = 'text-success'><%= notice %></p>


<div class = 'container'>
  <% if @book.errors.any? %>
    <h3 class = 'text-danger'><%= @book.errors.count %>error prohibited this book from being saved:</h3>
    <% @book.errors.full_messages.each do |message| %>
      <ul>
        <li class = 'text-danger'>
          <%= message %>
        </li>
      </ul>
        <% end %>
    <% end %>
  <div class = 'row'>
    
    <div class="col-lg-3 col-md-3">
      
      <h2>User info</h2>
      <table class = 'table'>
        
        <tbody>
          <tr>
            <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"exmaple-hoge", fallback: "no_image.jpg" %>
          </tr>
          
          <tr>
            <th>name</th>
            <th>
              <%= current_user.name %>
            </th>
          </tr>
          
          <tr>
            <th>introduction</th>
            <th>
              <%= current_user.introduction %>
            </th>
          </tr>
          
        </tbody>
      </table>
      <div class = 'row'>
        
          <%= link_to '', edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      
      <!--投稿-->
      <h2 class = 'mt-3'>New book</h2>
      <!--投稿フォーム-->
      <div class = 'form'>
        <%= form_with model: @book ,local:true do |f| %>
          
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class:'form-control' %>
          </div>
        
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, class:'form-control' %>
          </div>
        
          
            <%= f.submit 'Create Book' , class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <%= render 'books/list', books: @books %>
  </div>
</div>