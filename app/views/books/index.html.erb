<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="container">
  <div class="row">
    
    <div class="col-lg-4" style="background-color: orange;">
      <h2>サイドバー</h2>
    </div>
    <div class="col-lg-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Author</th>
            <th colspan="3"></th>
          </tr>
        </thead>
  
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= book.author %></td>
              <td><%= link_to 'Show', post %></td>
              <td><%= link_to 'Edit', edit_book_path(post) %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-secondary" %>