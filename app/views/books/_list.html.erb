<div class = 'col-8'>
      <h2>Books</h2>
      <table class = 'table table-striped'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% books.each do |book| %>
            <tr>
              <td></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>