<p class = 'text-success'><%= notice %></p>

<div class = 'container'>
  <div class = 'row'>
    
    <%= render 'share/userinfo', user: @book.user, new_book: @new_book %>
    <div class = 'col-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class = 'table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td>
                  <%= link_to "Edit", edit_book_path(@book), class:'btn btn-success' %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class:'btn btn-danger' %>
              </td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>