<p id="notice"><%= notice %></p>

<div class = 'container'>
  <div class = 'row'>
    
    <div class="col-lg-3">
      
      <h2>User info</h2>
      <table class = 'table'>
        
        <tbody>
          <tr>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"exmaple-hoge", fallback: "no_image.jpg" %>
          </tr>
          
          <tr>
            <th>name</th>
            
            <th>
              <%= @book.user.name %>
            </th>
          </tr>
          
          <tr>
            <th>introduction</th>
            <th>
              <%= @book.user.introduction %>
            </th>
          </tr>
          
        </tbody>
      </table>
      <div class = 'row'>
        
          <%= link_to '', edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      
      <!--投稿-->
      <h2 class = 'mt-3'>New Book</h2>
      <!--投稿フォーム-->
      <div class = 'form'>
        <%= form_with model: @book ,local:true do |f| %>
          
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class:'form-control' %>
          </div>
        
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, class:'form-control' %>
          </div>
        
          
            <%= f.submit 'Create Book' , class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class = 'col-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class = 'table table-striped'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td>
                  <%= link_to "edit", edit_book_path(@book) %>
              </td>
              <td>
                <%= link_to "delete", book_path(@book), method: :delete %>
              </td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>