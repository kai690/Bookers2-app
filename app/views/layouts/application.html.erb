<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = "d-flex flex-column vh-100">
    <!--ヘッダー-->
    <header>
      <!--ナビゲーションバー--> 
      <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container">
          <!--ロゴ-->
          <%= link_to "Bookers", root_path, class: 'navbar-brand p-3' %>
          <!--メニュー-->
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'Home', books_path, class: 'fas fa-home nav-link text-light' %>
              </li>
              
              <li class="nav-item">
                <%= link_to 'Users', new_user_session_path, class: 'nav-link' %>
              </li>
              
              <li class="nav-item">
                <%= link_to 'Books', new_user_session_path, class: 'nav-link' %>
              </li>
              
              <li class="nav-item">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
              
              <% else %>
              <li class="nav-item">
                <%= link_to 'Home', books_path, class: 'fas fa-home nav-link text-light' %>
              </li>
              
              <li class="nav-item">
                <%= link_to 'About', new_user_session_path, class: 'fas fa-link nav-link text-light' %>
              </li>
              
              <li class="nav-item">
                <%= link_to "Sign up", root_path, class: 'fas fa-user nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "Log in", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %>
              </li>
              <% end %>
            </ul>
          </div>
       
        </div>
      </nav>
    </header>
    
    <main class="mb-auto">
      <%= yield %>
    </main>
    
    <footer>
      <div class ='container mt-5'>
        <div class ='row'>
          <div class ='mx-auto'>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
    
  </body>
</html>
