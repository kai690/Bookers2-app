<p id="notice"><%= notice %></p>
<div class = 'container'>
  <div class = 'row'>
    <!--サイドバー-->
    <%= render 'share/userinfo', user: @user, new_book: @book %>
    <!--ユーザー一覧-->
    <div class = 'col-8 offset-md-1'>
      <h2>Users</h2>
      <table class = 'table'>
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 40,40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>