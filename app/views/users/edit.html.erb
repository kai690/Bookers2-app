
<div class = 'container'>
    <div class = 'row'>
        
        <div class = 'col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
            
        <h2>User Info</h2>
        <% if @user.errors.any? %>
          <h3 class = 'text-danger'><%= @user.errors.count %>error prohibited this book from being saved:</h3>
          <% @user.errors.full_messages.each do |message| %>
          <ul class = 'text-danger'>
              <li>
                  <%= message %>
              </li>
          </ul>
            
          <% end %>
        <% end %>
        <div class = 'form'>
            <%= form_with model:@user, local:true do |f| %>
                <div class = 'form-group'>
                    <label for="inputName">Name</label>
                    <%= f.text_field :name, autofocus: true, class:'form-control'%>
                </div>
                <div class = 'form-group'>
                    <label for="profile_image">Image</label>
                    <%= f.attachment_field :profile_image, class: 'form-control-file' %>
                </div>
                <div class = 'form-group'>
                    <label for="introduction">Introduction</label>
                    <%= f.text_field :introduction, autofocus: true, class:"form-control" %>
                </div>
                <%= f.submit "Update User", class:'btn btn-secondary' %>
            <% end %>
        </div>
        
    </div>
</div>